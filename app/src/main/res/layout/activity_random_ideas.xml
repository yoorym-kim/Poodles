<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 아이디어는 어떤가요?"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />



    <TextView
        android:id="@+id/Random1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewResult"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/white"
        tools:text=" " />



    <TextView
        android:id="@+id/Random2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Random1TextView"
        android:layout_marginTop="9dp"
        android:textColor="@android:color/white"
        tools:text=" " />


    <TextView
        android:id="@+id/Random3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Random2TextView"
        android:layout_marginTop="9dp"
        android:textColor="@android:color/white"
        tools:text=" " />



    <Button
        android:id="@+id/buttonGetAnotherIdea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Random3TextView"
        android:layout_marginTop="16dp"
        android:text=" " />

    <ProgressBar
        android:id="@+id/progressbar_random"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
