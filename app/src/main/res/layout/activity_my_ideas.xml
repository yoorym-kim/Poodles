<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/background"
android:padding="16dp">


    <Button
        android:id="@+id/buttonIdea2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="더보기" />

    <TextView
        android:id="@+id/idea2TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonIdea2"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/white"
        android:text="AI 기반 의료영상 진단 솔루션" />

    <TextView
        android:id="@+id/idea2ContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea2TitleTextView"
        android:layout_marginTop="9dp"
        android:textColor="@android:color/white"
        android:text="의료 영상 데이터를 분석하고 진단을 도와주는 인공지능 기반 의료 영상 진단 솔루션" />

    <!-- Button 3 with 2 TextViews -->
    <Button
        android:id="@+id/buttonIdea3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea2ContentTextView"
        android:layout_marginTop="25dp"
        android:text="더보기" />

    <TextView
        android:id="@+id/idea3TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonIdea3"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:text="임상시험 혁신을 위한 블록체인 플랫폼" />

    <TextView
        android:id="@+id/idea3ContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea3TitleTextView"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:text="블록체인 기술을 활용하여 임상시험 프로세스를 투명하게 관리하고 혁신적인 방법으로 참여자 모집 및 데이터 수집을 개선하는 플랫폼" />



</RelativeLayout>