<?xml version="1.0" encoding="utf-8"?>
<!-- activity_recommendation_result.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="25dp">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="이 아이디어는 어떤가요?"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />


    <Button
        android:id="@+id/buttonIdea1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewResult"
        android:layout_marginTop="25dp"
        android:text="더보기" />

    <TextView
        android:id="@+id/idea1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonIdea1"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/white"
        android:text=" " />

    <TextView
        android:id="@+id/idea1ContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea1TextView"
        android:layout_marginTop="9dp"
        android:textColor="@android:color/white"
        android:text=" " />


    <Button
        android:id="@+id/buttonIdea2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea1ContentTextView"
        android:layout_marginTop="25dp"
        android:text="더보기" />

    <TextView
        android:id="@+id/idea2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonIdea2"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/white"
        android:text=" " />

    <TextView
        android:id="@+id/idea2ContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea2TextView"
        android:layout_marginTop="9dp"
        android:textColor="@android:color/white"
        android:text=" " />

    <!-- Button 3 with 2 TextViews -->
    <Button
        android:id="@+id/buttonIdea3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea2ContentTextView"
        android:layout_marginTop="25dp"
        android:text="더보기" />

    <TextView
        android:id="@+id/idea3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonIdea3"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:text=" " />

    <TextView
        android:id="@+id/idea3ContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea3TextView"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:text=" " />


    <Button
        android:id="@+id/buttonGetAnotherIdea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea3ContentTextView"
        android:layout_marginTop="50dp"
        android:text="다른 아이디어 추천받기"
        android:background="@android:color/transparent"
        android:textColor="#FAFFBC"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
