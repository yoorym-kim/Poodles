<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/background"
android:padding="16dp">


    <Button
        android:id="@+id/buttonIdea2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="더보기" />

    <TextView
        android:id="@+id/idea2TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonIdea2"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/white"
        tools:text=" " />

    <TextView
        android:id="@+id/idea2ContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea2TitleTextView"
        android:layout_marginTop="9dp"
        android:textColor="@android:color/white"
        tools:text=" " />

    <!-- Button 3 with 2 TextViews -->
    <Button
        android:id="@+id/buttonIdea3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea2ContentTextView"
        android:layout_marginTop="25dp"
        android:text="더보기" />

    <TextView
        android:id="@+id/idea3TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonIdea3"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        tools:text=" " />

    <TextView
        android:id="@+id/idea3ContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idea3TitleTextView"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        tools:text=" " />



</RelativeLayout>